# Swachhta Citizen Hub Environment Configuration

# Application
NODE_ENV=production
APP_PORT=3000
APP_URL=https://swachhtacitizenhub.in

# Database
DATABASE_URL=sqlite:///swachhta.db
# For PostgreSQL: postgresql://user:password@localhost/swachhta_db

# Security
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12

# Google Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# File Upload
MAX_FILE_SIZE=16777216
UPLOAD_PATH=./uploads

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External APIs
WEATHER_API_KEY=your-weather-api-key
AIR_QUALITY_API_KEY=your-air-quality-api-key

# Feature Flags
ENABLE_CHATBOT=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SOCIAL_SHARING=true